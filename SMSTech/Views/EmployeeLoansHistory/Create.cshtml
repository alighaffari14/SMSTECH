</table>

<script src="~/scripts/jquery-1.10.2.min.js"></script>

<script>
            var formData;
            function GetData() {
                $('#body').empty();
                $.ajax({
                    url: '/EmployeeLoansHistory/GetData',
                    type: 'GET',
                    dataType: 'json',
                    contentType: 'application/json;charset=utf-8',
                    success: function (result) {
                        var rows = '';
                        $.each(result, function (key, value) {
                            rows = '<tr>'
                                + '<td>' + value.ID + '</td>'
                                 + '<td>' + value.Action + '</td>'
                                + '<td>' + value.ActionDate + '</td>'
                                + '<td>' + value.ActionUserID + '</td>'
                                + '<td>' + value.EmployeeID + '</td>'
                                + '<td>' + value.OperatorID + '</td>'
                                + '<td>' + value.EmployeeLoansID + '</td>'
                                + '<td>' + value.AllowanceName + '</td>'
                                + '<td>' + value.ReceivedLoanFrom + '</td>'
                                + '<td>' + value.ReceivedLoanTo + '</td>'
                                + '<td>' + value.ReturnedLoanFrom + '</td>'
                                + '<td>' + value.ReturnedLoanTo + '</td>'
                                + '<td>' + value.T_Date + '</td>'
                                + '<td>' + value.Remarks + '</td>'
                                + '<td>' + value.SalaryMonthID + '</td>'
                                + '<td>' + value.ChequeNo + '</td>'
                                + '<td>' + value.PaymentMethod + '</td>'
                                + '<td>' + value.Processesd + '</td>'
                                + '<td><input type="button" class="btn btn-primary edit" value="Edit"> <input type="button" class="btn btn-danger delete" value="Delete"></td>'
                            '</tr>'
                            $('#body').append(rows);
                        })
                    },
                    error: function (result) {
                    }
                })
            }
            $(document).delegate('.edit', '.click', function () {
                debugger
                var rowValue = $(this).closest('tr');
                var ID = rowValue.find("td:eq(0)").text();
                var Action = rowValue.find("td:eq(1)").text();
                var ActionDate = rowValue.find("td:eq(2)").text();
                var ActionUserID = rowValue.find("td:eq(3)").text();              
                var EmployeeID = rowValue.find("td:eq(4)").text();
                var OperatorID = rowValue.find("td:eq(5)").text();
                var EmployeeLoansID = rowValue.find("td:eq(6)").text();              
                var AllowanceName = rowValue.find("td:eq(7)").text();
                var ReceivedLoanFrom = rowValue.find("td:eq(8)").text();
                var ReceivedLoanTo = rowValue.find("td:eq(9)").text();
                var ReturnedLoanFrom = rowValue.find("td:eq(10)").text();
                var ReturnedLoanTo = rowValue.find("td:eq(11)").text();
                var T_Date = rowValue.find("td:eq(12)").text();
                var Remarks = rowValue.find("td:eq(12)").text();
                var SalaryMonthID = rowValue.find("td:eq(14)").text();
                var ChequeNo = rowValue.find("td:eq(15)").text();
                var PaymentMethod = rowValue.find("td:eq(16)").text();
                var Processesd = rowValue.find("td:eq(17)").text();

                $('#ID').val(ID);
                $('#Action').val(Action);            
                $('#ActionDate').val(ActionDate);
                $('#ActionUserID').val(ActionUserID);
                $('#EmployeeID').val(EmployeeID);
                $('#OperatorID').val(OperatorID);
                $('#EmployeeLoansID').val(EmployeeLoansID);              
                $('#AllowanceName').val(AllowanceName);
                $('#ReceivedLoanFrom').val(ReceivedLoanFrom);
                $('#ReceivedLoanTo').val(ReceivedLoanTo);
                $('#ReturnedLoanFrom').val(ReturnedLoanFrom);
                $('#ReturnedLoanTo').val(ReturnedLoanTo);
                $('#T_Date').val(T_Date);
                $('#Remarks').val(Remarks);
                $('#SalaryMonthID').val(SalaryMonthID);
                $('#ChequeNo').val(ChequeNo);
                $('#PaymentMethod').val(PaymentMethod);
                $('#Processesd').val(Processesd);
            })
            $('#btn_Add').click(function () {
                Add(formData);
            })
            function Add() {
                debugger
                var data = {};
                data.Action = $('#Action').val();
                data.ActionDate = $('#ActionDate').val();
                data.ActionUserID = $('#ActionUserID').val();
                data.EmployeeID = $('#EmployeeID').val();                            
                data.OperatorID = $('#OperatorID').val();
                data.EmployeeLoansID = $('#EmployeeLoansID').val();
                data.AllowanceName = $('#AllowanceName').val();
                data.ReceivedLoanFrom = $('#ReceivedLoanFrom').val();
                data.ReceivedLoanTo = $('#ReceivedLoanTo').val();
                data.ReturnedLoanFrom = $('#ReturnedLoanFrom').val();
                data.ReturnedLoanTo = $('#ReturnedLoanTo').val();
                data.T_Date = $('#T_Date').val();
                data.Remarks = $('#Remarks').val();
                data.SalaryMonthID = $('#SalaryMonthID').val();
                data.ChequeNo = $('#ChequeNo').val();
                data.PaymentMethod = $('#PaymentMethod').val();
                data.Processesd = $('#Processesd').val();
                $.ajax({
                    url: "/EmployeeLoansHistory/Insert",
                    data: JSON.stringify(data),
                    type: "POST",
                    contentType: "application/json;charset=utf-8",
                    dataType: "json",
                    success: function () {
                        alert(" Success");
                        GetData();
                    },
                    error: function () {
                        alert("Failed");
                    }
                })
            }
</script>

