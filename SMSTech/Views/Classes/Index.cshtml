<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive m-t-40">
                    <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>  Name         </th>
                                <th>  Class Number         </th>
                                <th>  Level Name         </th>
                                <th>  Level         </th>

                                <th>Actions</th>

                            </tr>
                        </thead>
                        <tbody id="body">
                            <tr id="LoadingStatus" style="color:red"></tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
